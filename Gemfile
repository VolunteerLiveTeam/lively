source 'https://rubygems.org'

# Rails frameworks
gem 'rails', '~> 5.1.0'
# Use Puma as the app server
gem 'puma', '~> 3.7'
# Use HAML for templates
gem 'haml-rails', '~> 1.0'
# Use SCSS for stylesheets
gem 'sass-rails', '~> 5.0'
# Use Uglifier as compressor for JavaScript assets
gem 'uglifier', '>= 1.3.0'

# Turbolinks makes navigating pages faster
gem 'turbolinks', '~> 5'

# Use MongoDB
gem 'mongoid', '~> 6.1'
# Use Redis
gem 'redis', '~> 3.3'

# Devise handles logins
gem 'devise', '~> 4.3'
# Reddit oauth gem
gem 'omniauth-oauth2', '1.3.1'
gem 'omniauth-reddit', :git => 'git://github.com/jackdempsey/omniauth-reddit.git'

# Groupify for group/team management
gem 'groupify', '~> 0.9'
# Scram for user authorisation
gem 'scram', '~> 0.1'

# mongoid-slug for pretty URLs
gem 'mongoid-slug', '~> 5.3'

# Paperclip handles file uploads
gem 'paperclip', '~> 5.1'
gem 'mongoid-paperclip', '~> 0.0.11'
# Files are stored in S3
gem 'aws-sdk', '~> 2.10'

# Load config from .env
gem 'dotenv-rails', '~> 2.2.1'

group :development do
  gem 'listen', '>= 3.0.5', '< 3.2'
end

# Windows does not include zoneinfo files, so bundle the tzinfo-data gem
gem 'tzinfo-data', platforms: [:mingw, :mswin, :x64_mingw, :jruby]
